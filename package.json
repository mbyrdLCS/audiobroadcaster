{
  "name": "audio-broadcaster",
  "version": "1.0.0",
  "description": "An Electron app for broadcasting audio",
  "author": "MJB",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron": "^28.2.3",
    "express": "^4.18.2",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.mjb.audiobroadcaster",
    "productName": "Audio Broadcaster",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        },
        {
          "target": "zip",
          "arch": "x64"
        }
      ],
      "icon": "public/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "minimumSystemVersion": "10.13"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public/test.mp3",
        "to": "test.mp3"
      }
    ],
    "asar": true,
    "electronVersion": "28.3.3"
  }
}
