{
  "name": "audio-broadcaster",
  "version": "1.0.0",
  "description": "An Electron app for broadcasting audio",
  "author": "MJB",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.mjb.audiobroadcaster",
    "productName": "Audio Broadcaster",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "minimumSystemVersion": "10.13"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "transcribe.py",
        "to": "transcribe.py"
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      }
    ],
    "asar": true,
    "electronVersion": "28.3.3"
  }
}
